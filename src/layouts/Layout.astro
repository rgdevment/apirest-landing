---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="apirest.cl - Servicios Open Source Gratuitos" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-br from-white via-blue-50 to-indigo-50 text-gray-900 font-sans antialiased selection:bg-indigo-400 selection:text-white">
		<main class="max-w-4xl mx-auto px-6 py-12">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #f1f5f9;
	}
	::-webkit-scrollbar-thumb {
		background: #94a3b8;
		border-radius: 5px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #64748b;
	}
</style>
