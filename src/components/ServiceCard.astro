---
interface Props {
	title: string;
	description: string;
	url: string;
	githubUrl?: string;
	type: "API" | "APP" | "LIB";
	icon: string;
	status?: "online" | "beta" | "maintenance";
}

const { title, description, url, githubUrl, type, icon, status = "online" } = Astro.props;

const statusColor = {
	online: "bg-emerald-500",
	beta: "bg-amber-500",
	maintenance: "bg-red-500"
};
---

<a href={url} target="_blank" class="group relative block p-6 bg-white border border-gray-200 rounded-xl hover:border-indigo-400 hover:shadow-xl hover:shadow-indigo-100/50 transition-all">
	<div class="flex items-start justify-between mb-4">
		<div class="p-3 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-lg text-indigo-600 group-hover:text-indigo-700 group-hover:from-indigo-100 group-hover:to-blue-100 transition-colors">
			<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d={icon} />
			</svg>
		</div>
		<div class="flex items-center gap-2">
			<span class={`text-xs font-mono px-2 py-1 rounded bg-gray-100 text-gray-700 border border-gray-200`}>{type}</span>
			<span class="flex h-3 w-3">
				<span class={`animate-ping absolute inline-flex h-3 w-3 rounded-full opacity-75 ${statusColor[status]}`}></span>
				<span class={`relative inline-flex rounded-full h-3 w-3 ${statusColor[status]}`}></span>
			</span>
		</div>
	</div>

	<h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-indigo-700 transition-colors">{title}</h3>
	<p class="text-gray-600 text-sm leading-relaxed mb-4">{description}</p>

	<div class="flex items-center justify-between">
		<div class="flex items-center text-indigo-600 text-sm font-medium mt-auto group-hover:translate-x-1 transition-transform">
			{githubUrl ? 'Descargar' : 'Ver documentación'} <span class="ml-1">→</span>
		</div>
		{githubUrl && (
			<a href={githubUrl} target="_blank" class="text-gray-400 hover:text-gray-700 transition-colors" onclick="event.stopPropagation();" title="Ver en GitHub">
				<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
			</a>
		)}
	</div>
</a>
