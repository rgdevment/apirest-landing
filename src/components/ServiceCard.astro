---
interface Props {
	title: string;
	description: string;
	url: string;
	githubUrl?: string;
	type: "API" | "APP" | "LIB";
	icon: string;
	status?: "online" | "beta" | "maintenance";
}

const { title, description, url, githubUrl, type, icon, status = "online" } = Astro.props;

const statusColor = {
	online: "bg-emerald-500",
	beta: "bg-amber-500",
	maintenance: "bg-red-500"
};
---

<a href={url} target="_blank" class="group relative block p-6 bg-white border-2 border-slate-200 rounded-xl hover:border-slate-400 hover:shadow-xl hover:shadow-slate-200/60 transition-all">
	<div class="flex items-start justify-between mb-4">
		<div class="p-3 bg-slate-100 rounded-lg text-slate-700 group-hover:text-slate-900 group-hover:bg-slate-200 transition-colors">
			<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d={icon} />
			</svg>
		</div>
		<div class="flex items-center gap-2">
			<span class={`text-xs font-mono px-2 py-1 rounded bg-slate-100 text-slate-700 border border-slate-300`}>{type}</span>
			<span class="flex h-3 w-3">
				<span class={`animate-ping absolute inline-flex h-3 w-3 rounded-full opacity-75 ${statusColor[status]}`}></span>
				<span class={`relative inline-flex rounded-full h-3 w-3 ${statusColor[status]}`}></span>
			</span>
		</div>
	</div>

	<h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-slate-800 transition-colors">{title}</h3>
	<p class="text-gray-600 text-sm leading-relaxed mb-4">{description}</p>

	<div class="flex items-center justify-between">
		<div class="flex items-center text-slate-800 text-sm font-medium mt-auto group-hover:translate-x-1 transition-transform">
