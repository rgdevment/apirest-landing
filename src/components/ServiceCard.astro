---
interface Props {
	title: string;
	description: string;
	url: string;
	githubUrl?: string;
	type: "API" | "APP" | "LIB";
	icon: string;
}

const { title, description, url, githubUrl, type, icon } = Astro.props;
---

<div class="group relative block p-6 bg-gray-800 border border-gray-700 rounded-xl hover:border-violet-500/50 hover:shadow-xl hover:shadow-violet-500/20 transition-all">
	<div class="flex items-start justify-between mb-4">
		<div class="p-3 bg-gray-900 rounded-lg text-violet-400 group-hover:text-violet-300 transition-colors">
			<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d={icon} />
			</svg>
		</div>
		<div class="flex items-center gap-2">
			<span class={`text-xs font-mono px-2 py-1 rounded bg-gray-900 text-gray-300 border border-gray-600`}>{type}</span>
		</div>
	</div>

	<h3 class="text-xl font-bold text-gray-100 mb-2 group-hover:text-white transition-colors">{title}</h3>
	<p class="text-gray-400 text-sm leading-relaxed mb-6">{description}</p>

	{githubUrl ? (
		<div class="flex gap-3">
			<a href={url} target="_blank" class="flex-1 px-4 py-2.5 bg-violet-600 hover:bg-violet-700 text-white text-sm font-semibold rounded-lg transition-colors text-center">
				üè™ Microsoft Store
			</a>
			<a href={githubUrl} target="_blank" class="flex-1 px-4 py-2.5 bg-gray-900 hover:bg-gray-950 text-gray-300 hover:text-white text-sm font-semibold rounded-lg border border-gray-700 hover:border-gray-600 transition-colors text-center flex items-center justify-center gap-2">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
				GitHub
			</a>
		</div>
	) : (
		<a href={url} target="_blank" class="block px-4 py-2.5 bg-violet-600 hover:bg-violet-700 text-white text-sm font-semibold rounded-lg transition-colors text-center">
			Ver repositorio ‚Üí
		</a>
	)}
</div>
