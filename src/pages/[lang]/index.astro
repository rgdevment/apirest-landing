---
import ServiceCard from '../../components/ServiceCard.astro';
import { siteData } from '../../i18n/data';
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const t = siteData[lang as keyof typeof siteData];

const nextLang = lang === 'es' ? 'en' : 'es';
const nextLabel = lang === 'es' ? 'English' : 'Español';
---

<Layout title={t.meta.title}>
	<header class="py-24 border-b border-slate-800 relative overflow-hidden">
		<div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-4xl bg-indigo-500/5 blur-[120px] -z-10"></div>

        <div class="absolute top-6 right-6 z-20">
            <a href={`/${nextLang}`} class="text-xs font-bold px-3 py-1 rounded-full border border-slate-700 bg-slate-800/50 text-slate-300 hover:text-white hover:border-slate-500 transition-all">
                {nextLabel}
            </a>
        </div>

		<div class="max-w-4xl mx-auto text-center px-6">
			<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-800/50 border border-slate-700 text-slate-300 text-xs font-mono mb-8 backdrop-blur-sm">
				<span class="flex h-2 w-2 rounded-full bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.5)]"></span>
				{t.hero.status}
			</div>

			<h1 class="text-5xl md:text-7xl font-bold text-slate-100 mb-8 tracking-tight" set:html={t.hero.title} />

			<p class="text-xl text-slate-400 leading-relaxed max-w-2xl mx-auto mb-10" set:html={t.hero.subtitle} />

			<div class="flex flex-col sm:flex-row justify-center gap-4">
				<a href="#directory" class="px-8 py-4 bg-slate-100 text-slate-900 font-bold rounded-lg hover:bg-white transition-colors">
					{t.hero.ctaMain}
				</a>
				<a href="https://github.com/rgdevment" target="_blank" class="px-8 py-4 bg-slate-900 text-slate-200 font-bold rounded-lg border border-slate-700 hover:border-slate-500 transition-colors flex items-center justify-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
					{t.hero.ctaGithub}
				</a>
			</div>
		</div>
	</header>

	<section id="directory" class="py-24 px-6 max-w-6xl mx-auto">
		<div class="mb-12">
			<h2 class="text-3xl font-bold text-slate-100">{t.directory.title}</h2>
			<p class="text-slate-400 mt-2 text-lg">{t.directory.subtitle}</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			{t.services.map(service => (
				// @ts-ignore
				<ServiceCard {...service} />
			))}
		</div>
	</section>

	<section class="py-24 bg-slate-900/50 border-y border-slate-800">
		<div class="max-w-6xl mx-auto px-6">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">

				<div>
					<h2 class="text-3xl md:text-4xl font-bold text-slate-100 mb-6">
						{t.mission.title}
					</h2>
					<div class="prose prose-invert prose-lg text-slate-400">
						<p class="mb-6" set:html={t.mission.text1} />
						<p class="mb-6" set:html={t.mission.text2} />
						<p set:html={t.mission.text3} />
					</div>
				</div>

				<div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
					{t.values.map(value => (
						<div class="space-y-3">
							<h3 class="text-lg font-bold text-indigo-400 border-l-2 border-indigo-500 pl-3">
								{value.title}
							</h3>
							<p class="text-slate-400 text-sm leading-relaxed">
								{value.desc}
							</p>
						</div>
					))}
				</div>

			</div>
		</div>
	</section>

	<footer class="py-12 text-center border-t border-slate-800/50">
		<p class="text-slate-500 font-mono text-sm">
			Desarrollado con <span class="text-red-500">♥</span> y
			<a href="https://astro.build" target="_blank" class="text-slate-400 hover:text-white underline decoration-slate-700">Astro</a>
			por <a href="https://github.com/rgdevment" class="text-indigo-400 hover:text-indigo-300 font-bold">@rgdevment</a>.
		</p>
		<p class="text-slate-600 text-xs mt-2">
			Server Status: <span class="text-emerald-500">Online</span> • Location: <span class="text-slate-500">Local Lab</span>
		</p>
	</footer>
</Layout>
